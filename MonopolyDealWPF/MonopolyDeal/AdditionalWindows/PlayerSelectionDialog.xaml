<Window x:Class="AdditionalWindows.PlayerSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Room" Height="300" Width="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        
        <ListBox    Name="PlayerListBox"
                    DisplayMemberPath="Name"
                    Grid.Row="0"/>        
        <Button     Name="SelectPlayerButton"
                    Content="Select Player"
                    Click="SelectPlayer_Click"
                    Grid.Row="1"/>
    </Grid>
</Window>
